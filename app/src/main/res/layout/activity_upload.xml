<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UploadActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/sagegreen_border"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Clothing Items"
                android:textAlignment="center"
                android:textColor="@color/sagegreen"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/uploadImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/uploadimage" />

            <EditText
                android:id="@+id/uploadCategory"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/sagegreen_border"
                android:gravity="start|center_vertical"
                android:hint="Enter category"
                android:padding="16dp"
                android:textColor="@color/sagegreen" />

            <EditText
                android:id="@+id/uploadColour"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/sagegreen_border"
                android:gravity="start|center_vertical"
                android:hint="Enter colour"
                android:padding="16dp"
                android:textColor="@color/sagegreen" />


            <ImageButton
                android:id="@+id/favourite"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginTop="20dp"
                android:background="@drawable/sagegreen_border"
                android:padding="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/heart"
                android:text="Favourite"
                android:textColor="@color/sagegreen" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/sagegreen"
                android:text="Save"
                android:textSize="18sp"
                app:cornerRadius="20dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>